{
  "name": "Boilerplate",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "prestart": "run-s clean",
    "start": "run-p parcel:watch eslint:watch stylelint:watch browserSync",
    "build": "run-s clean parcel:build",
    "parcel:watch": "parcel watch 'src/**/*.js'",
    "parcel:build": "parcel build 'src/**/*.js' --no-cache",
    "eslint": "eslint 'src/**/*.js'",
    "eslint:watch": "onchange 'src/**/*.js' -- eslint 'src/**/*.js' --format=pretty --cache",
    "stylelint:watch": "onchange 'src/**/*.scss' -- stylelint 'src/**/*.scss' --cache",
    "browserSync": "browser-sync start --config ./config/bs-config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@adaptagency/fe_tools": "^1.6.4",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.1",
    "dotenv": "^6.2.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-formatter-pretty": "^2.1.1",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "parcel-bundler": "^1.11.0",
    "postcss-critical-css": "^3.0.3",
    "rimraf": "^2.6.3",
    "stylelint": "^8.0.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^0.7.0",
    "stylelint-scss": "^1.2.1"
  },
  "dependencies": {
    "sanitize.css": "^8.0.0"
  }
}
